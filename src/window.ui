<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="HoctaneWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Hoctane</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="titlebar">
      <object class="GtkHeaderBar">
        <child type="end">
          <object class="GtkMenuButton">
            <property name="primary">True</property>
            <property name="icon-name">open-menu-symbolic</property>
            <property name="tooltip-text" translatable="yes">Main Menu</property>
            <property name="menu-model">primary_menu</property>
          </object>
        </child>
      </object>
    </property>
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Select Team:</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkDropDown" id="combo_teams">
            <property name="hexpand">true</property>
          </object>
        </child>
        <child>
          <object class="GtkPaned">
            <property name="vexpand">true</property>
            <property name="position">550</property>
            <property name="start-child">
              <object class="GtkScrolledWindow">
                <property name="vexpand">true</property>
                <property name="child">
                  <object class="GtkColumnView" id="view_players">
                    <property name="show-row-separators">true</property>
                    <property name="show-column-separators">true</property>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">Name</property>
                        <property name="expand">true</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_name"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">Flag</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_flag"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">No.</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_number"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">Age</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_age"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">Form</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_form"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkColumnViewColumn">
                        <property name="title" translatable="yes">TSI</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="factory_tsi"/>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
            <property name="end-child">
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="child">
                  <object class="GtkBox" id="details_panel">
                    <property name="orientation">vertical</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>
                    <property name="spacing">12</property>
                    <property name="visible">false</property>
                    <child>
                      <object class="GtkLabel" id="details_name">
                        <property name="css-classes">title-2</property>
                        <property name="halign">start</property>
                        <property name="wrap">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="details_id">
                        <property name="css-classes">dim-label</property>
                        <property name="halign">start</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <!-- Preferred Position -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Preferred Position</property>
                            <property name="css-classes">heading</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="details_category">
                            <property name="label">-</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <!-- Current Level -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Current Level</property>
                            <property name="css-classes">heading</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkGrid">
                            <property name="column-spacing">12</property>
                            <property name="row-spacing">6</property>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Form:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_form">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Stamina:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_stamina">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">TSI:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_tsi">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Injury:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_injury">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <!-- Skills -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Skills</property>
                            <property name="css-classes">heading</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkGrid">
                            <property name="column-spacing">12</property>
                            <property name="row-spacing">6</property>
                            <!-- Keeper -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Keeper:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_keeper">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Defender -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Defending:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_defender">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Playmaker -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Playmaking:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_playmaker">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Winger -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Winger:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_winger">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Passing -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Passing:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">4</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_passing">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">4</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Scorer -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Scoring:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">5</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_scorer">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">5</property>
                                </layout>
                              </object>
                            </child>
                            <!-- Set Pieces -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Set Pieces:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">6</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_skill_set_pieces">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">6</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <!-- Career & Club -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Career &amp; Club</property>
                            <property name="css-classes">heading</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkGrid">
                            <property name="column-spacing">12</property>
                            <property name="row-spacing">6</property>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Goals (Career):</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_career_goals">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Goals (League):</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_league_goals">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">User Loyalty:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_loyalty">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Mother Club:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_mother_club">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                    <!-- Recent Match -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Last Match</property>
                            <property name="css-classes">heading</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkGrid">
                            <property name="column-spacing">12</property>
                            <property name="row-spacing">6</property>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Date:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_last_match_date">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Position:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_position_code">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Rating:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_rating">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">2</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Minutes:</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="details_played_minutes">
                                <property name="label">-</property>
                                <property name="halign">start</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">3</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Hoctane</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
